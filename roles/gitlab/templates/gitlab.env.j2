# GitLab Environment Variables
# Generated by Ansible - Do not edit manually

# Basic Configuration
GITLAB_HOSTNAME={{ gitlab_hostname }}.{{ gitlab_domain }}
GITLAB_ROOT_PASSWORD={{ gitlab_initial_root_password }}

# SMTP Configuration
GITLAB_SMTP_ENABLE={{ gitlab_smtp_enable | lower }}
GITLAB_SMTP_ADDRESS={{ gitlab_smtp_address }}
GITLAB_SMTP_PORT={{ gitlab_smtp_port }}
GITLAB_SMTP_USERNAME={{ gitlab_smtp_user_name }}
GITLAB_SMTP_PASSWORD={{ gitlab_smtp_password }}
GITLAB_SMTP_DOMAIN={{ gitlab_smtp_domain }}
GITLAB_SMTP_STARTTLS={{ gitlab_smtp_enable_starttls_auto | lower }}

# Registry Configuration
GITLAB_REGISTRY_ENABLED={{ gitlab_registry_enabled | lower }}
{% if gitlab_registry_enabled %}
GITLAB_REGISTRY_HOST={{ gitlab_registry_host }}
GITLAB_REGISTRY_PORT={{ gitlab_registry_port }}
GITLAB_REGISTRY_URL={{ gitlab_registry_url }}
{% endif %}

# Pages Configuration
GITLAB_PAGES_ENABLED={{ gitlab_pages_enable | lower }}
{% if gitlab_pages_enable %}
GITLAB_PAGES_EXTERNAL_URL={{ gitlab_pages_external_url }}
GITLAB_PAGES_LISTEN_PROXY={{ gitlab_pages_listen_proxy }}
{% endif %}

# Backup Configuration
GITLAB_BACKUP_PATH={{ gitlab_backup_path }}

# SSH Configuration
GITLAB_SSH_PORT={{ gitlab_shell_ssh_port }}

# Port Configuration
GITLAB_WEB_PORT={{ gitlab_web_listen_port }}
GITLAB_WEBSECURE_PORT={{ gitlab_websecure_listen_port }}
{% if gitlab_pages_enable %}
GITLAB_PAGES_PORT={{ gitlab_pages_listen_port }}
{% endif %}