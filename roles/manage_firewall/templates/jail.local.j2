# Fail2Ban configuration
# Generated by wolskinet.infrastructure.manage_firewall role

[DEFAULT]
# Ban hosts for one hour:
bantime = {{ firewall_fail2ban_services[0].bantime | default(3600) }}

# Override /etc/fail2ban/jail.d/00-firewalld.conf:
banaction = iptables-multiport

# A host is banned after 5 failures within 10 minutes
findtime = {{ firewall_fail2ban_services[0].findtime | default(600) }}
maxretry = {{ firewall_fail2ban_services[0].maxretry | default(5) }}

# Ignore local IPs
ignoreip = {{ firewall_fail2ban_ignoreips | join(' ') }}

# Email settings (disabled by default)
#mta = sendmail
#action = %(action_)s

{% for service in firewall_fail2ban_services %}
{% if service.enabled %}
[{{ service.name }}]
enabled = true
maxretry = {{ service.maxretry | default(5) }}
{% if service.bantime is defined %}
bantime = {{ service.bantime }}
{% endif %}
{% if service.findtime is defined %}
findtime = {{ service.findtime }}
{% endif %}
{% endif %}

{% endfor %}