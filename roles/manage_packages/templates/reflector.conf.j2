# {{ ansible_managed }}
# Reflector configuration for automatic mirror updates

# Set the output path for the mirrorlist
--save /etc/pacman.d/mirrorlist

# Select mirrors from specific countries (optional)
# --country France,Germany

# Use only the most recently synchronized mirrors
--latest 20

# Sort mirrors by download speed
--sort rate

# Use only mirrors that support HTTPS
--protocol https

# Maximum age of the last synchronization (hours)
--age 12
