# {{ ansible_managed }}
# systemd-journald configuration

[Journal]
# Storage settings
Storage=persistent

# Size limits
SystemMaxUse={{ infrastructure.host.journal.max_size }}
RuntimeMaxUse={{ infrastructure.host.journal.max_size }}

# Retention settings
MaxRetentionSec={{ infrastructure.host.journal.max_retention }}

# Compression
Compress=yes

# Rate limiting
RateLimitInterval=30s
RateLimitBurst=1000

# Additional journal settings
ForwardToSyslog=no
ForwardToKMsg=no
ForwardToConsole=no
MaxLevelStore=info
MaxLevelSyslog=info
