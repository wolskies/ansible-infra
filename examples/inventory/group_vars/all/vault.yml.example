# This is an EXAMPLE vault file showing how to structure your encrypted secrets
# To use this:
# 1. Copy this file to vault.yml (remove .example)
# 2. Edit the values with your actual secrets
# 3. Encrypt with: ansible-vault encrypt vault.yml
#
# DO NOT commit real secrets to version control!

---
# User password hashes (generate with: python3 -c "import crypt; print(crypt.crypt('password', crypt.mksalt(crypt.METHOD_SHA512)))")
vault_user_passwords:
  admin: "$6$rounds=656000$REPLACE_WITH_REAL_SALT$REPLACE_WITH_REAL_HASH"
  service: "$6$rounds=656000$REPLACE_WITH_REAL_SALT$REPLACE_WITH_REAL_HASH"

# Private repository URLs (replace with your actual repositories)
vault_repositories:
  dotfiles: "git@github.com:yourusername/dotfiles.git"
  private_configs: "ssh://git@gitlab.yourcompany.com:2222/configs/infrastructure.git"

# API Keys and tokens (replace with your actual keys)
vault_api_keys:
  github_token: "ghp_REPLACE_WITH_YOUR_GITHUB_TOKEN"
  gitlab_token: "glpat-REPLACE_WITH_YOUR_GITLAB_TOKEN"
  
# SSH Keys for accessing private repositories
vault_ssh_keys:
  dotfiles_deploy_key: |
    -----BEGIN OPENSSH PRIVATE KEY-----
    REPLACE_WITH_YOUR_ACTUAL_PRIVATE_KEY_CONTENT
    -----END OPENSSH PRIVATE KEY-----

# Email/notification credentials
vault_email:
  smtp_password: "your-app-specific-password"
  notification_email: "admin@yourdomain.com"

# Database credentials (if using database roles)
vault_database:
  root_password: "your-secure-database-password"
  app_password: "your-app-database-password"