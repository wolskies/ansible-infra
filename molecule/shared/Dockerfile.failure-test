# Specialized container for testing failure scenarios
FROM ubuntu:24.04

# Install systemd and python but deliberately create problematic conditions
RUN apt-get update && \
    apt-get install -y \
    systemd \
    python3 \
    python3-pip \
    ufw \
    snapd \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Remove packages that will cause our known failures
RUN pip3 uninstall -y passlib || true
RUN apt-get remove -y git nodejs npm curl wget || true

# Configure systemd
RUN systemctl set-default multi-user.target

VOLUME ["/sys/fs/cgroup"]
CMD ["/lib/systemd/systemd"]